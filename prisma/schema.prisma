// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================================================
// Core Models
// ============================================================================

model User {
  id       String @id @default(cuid())
  email    String @unique
  nickname String @unique
  profile  String @default("") // Profile image URL
  oauthId  Int? // OAuth provider ID
  roleId   Int    @default(2) // 1=admin, 2=user

  // Audit fields
  createdAt  DateTime  @default(now()) @map("created_at")
  createUser String    @default("system") @map("create_user")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  updateUser String    @default("system") @map("update_user")
  deletedAt  DateTime? @map("deleted_at")
  deleteUser String?   @map("delete_user")

  // Relations
  oauthProvider OAuthProvider? @relation(fields: [oauthId], references: [id])
  role          UserRole       @relation(fields: [roleId], references: [id])
  posts         Post[]
  comments      Comment[]

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  @@index([roleId])
  @@index([oauthId])
  @@map("users")
}

model Post {
  id          String @id @default(cuid())
  title       String
  content     String @db.Text
  thumbnail   String @default("") // Thumbnail image URL
  status      String @default("draft") // draft, published
  readingTime Int    @default(0) @map("reading_time") // Expected reading time in minutes
  viewCount   Int    @default(0) @map("view_count")
  userId      String @map("user_id") // Only admin can write
  projectId   Int    @map("project_id")
  seriesId    Int?   @map("series_id") // Optional series connection

  // Audit fields
  createdAt  DateTime  @default(now()) @map("created_at")
  createUser String    @default("system") @map("create_user")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  updateUser String    @default("system") @map("update_user")
  deletedAt  DateTime? @map("deleted_at")
  deleteUser String?   @map("delete_user")

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project    Project     @relation(fields: [projectId], references: [id])
  series     Series?     @relation(fields: [seriesId], references: [id])
  comments   Comment[]
  postTags   PostTag[]
  viewTrends ViewTrend[]

  @@index([userId])
  @@index([projectId])
  @@index([seriesId])
  @@index([status])
  @@map("posts")
}

model Series {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  thumbnail   String?
  sort        Int     @default(0) // Display order

  // Audit fields
  createdAt  DateTime  @default(now()) @map("created_at")
  createUser String    @default("system") @map("create_user")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  updateUser String    @default("system") @map("update_user")
  deletedAt  DateTime? @map("deleted_at")
  deleteUser String?   @map("delete_user")

  // Relations
  posts Post[]

  @@map("series")
}

model Comment {
  id       Int    @id @default(autoincrement())
  postId   String @map("post_id") // Required
  userId   String @map("user_id") // Required (login required)
  parentId Int?   @map("parent_id") // For nested replies
  content  String @db.Text

  // Audit fields
  createdAt  DateTime  @default(now()) @map("created_at")
  createUser String    @default("system") @map("create_user")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  updateUser String    @default("system") @map("update_user")
  deletedAt  DateTime? @map("deleted_at")
  deleteUser String?   @map("delete_user")

  // Relations
  post    Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([userId])
  @@index([parentId])
  @@map("comments")
}

// ============================================================================
// Support Models
// ============================================================================

model UserRole {
  id   Int    @id @default(autoincrement())
  name String @unique // "admin", "user"

  // Audit fields
  createdAt  DateTime @default(now()) @map("created_at")
  createUser String   @default("system") @map("create_user")
  updatedAt  DateTime @updatedAt @map("updated_at")
  updateUser String   @default("system") @map("update_user")

  users User[]

  @@map("user_roles")
}

model OAuthProvider {
  id   Int    @id @default(autoincrement())
  name String @unique // "google", "github"

  // Audit fields
  createdAt  DateTime @default(now()) @map("created_at")
  createUser String   @default("system") @map("create_user")
  updatedAt  DateTime @updatedAt @map("updated_at")
  updateUser String   @default("system") @map("update_user")

  users User[]

  @@map("oauth_providers")
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  // Audit fields
  createdAt  DateTime @default(now()) @map("created_at")
  createUser String   @default("system") @map("create_user")
  updatedAt  DateTime @updatedAt @map("updated_at")
  updateUser String   @default("system") @map("update_user")

  postTags PostTag[]

  @@map("tags")
}

model PostTag {
  postId String @map("post_id")
  tagId  Int    @map("tag_id")

  // Audit fields
  createdAt  DateTime @default(now()) @map("created_at")
  createUser String   @default("system") @map("create_user")

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@index([tagId])
  @@map("post_tags")
}

model Project {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  image String?
  desc  String
  sort  Int     @default(0) // Display order

  // Audit fields
  createdAt  DateTime  @default(now()) @map("created_at")
  createUser String    @default("system") @map("create_user")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  updateUser String    @default("system") @map("update_user")
  deletedAt  DateTime? @map("deleted_at")
  deleteUser String?   @map("delete_user")

  posts Post[]

  @@map("projects")
}

model ViewTrend {
  id        Int      @id @default(autoincrement())
  postId    String   @map("post_id")
  viewCount Int      @default(0) @map("view_count")
  viewDate  DateTime @map("view_date") @db.Date

  // Audit fields
  createdAt  DateTime @default(now()) @map("created_at")
  createUser String   @default("system") @map("create_user")
  updatedAt  DateTime @updatedAt @map("updated_at")
  updateUser String   @default("system") @map("update_user")

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, viewDate])
  @@index([postId])
  @@index([viewDate])
  @@map("view_trends")
}

// ============================================================================
// NextAuth Required Tables
// ============================================================================

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Audit fields
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  // Audit fields
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  // Audit fields
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([identifier, token])
  @@map("verification_tokens")
}
